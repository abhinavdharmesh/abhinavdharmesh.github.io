      // Split the text into an array of words

      var words = text.split(" ");

      // Create an array to store the randomly selected words

      var selectedWords = [];

      // Select a random number of words from the array

      var numWords = words.length;

      for (var i = 0; i < numWords; i++) {

        // Select a word from the array

        var word = words[i];

        // Create a new element for the word

        var wordElement = document.createElement("span");

        wordElement.classList.add("word");

        wordElement.textContent = word;

        // Add the word element to the body

        document.body.appendChild(wordElement);

        // Add the word to the selectedWords array

        selectedWords.push(word);

        // Generate random x and y positions for the word

        var x = Math.floor(Math.random() * window.innerWidth);

var y = Math.floor(Math.random() * window.innerHeight);

    // Apply the x and y positions to the word element

    wordElement.style.left = x + "px";

    wordElement.style.top = y + "px";

  }

